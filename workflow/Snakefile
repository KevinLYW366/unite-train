from snakemake.io import glob_wildcards, expand

TYPE = ["",      # Fungi, Includes singletons set as RefS (in dynamic files).
        "s_",    # Fungi, Includes global and 97% singletons.
        "all_",  # All Euks, Includes singletons set as RefS (in dynamic files).
        "s_all_" # All Euks, Includes global and 97% singletons.
        ]
DATE = ["10.05.2021"]

GOALS = expand("results/sh_qiime_release_{type}{date}", type=TYPE, date=DATE)
print(GOALS)

rule all:
    input:
        GOALS

